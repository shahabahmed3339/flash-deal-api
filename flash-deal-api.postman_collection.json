{
  "info": {
    "name": "Flash Deal API",
    "_postman_id": "flash-deal-collection",
    "description": "Flash Deal Reservation & Checkout API with environment variables (multi-SKU with indexed product IDs)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{productName}}\",\n  \"totalStock\": {{totalStock}}\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/products",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["products"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save productId with incremental index",
              "let response = pm.response.json();",
              "if (response._id) {",
              "    let index = pm.collectionVariables.get('productIndex');",
              "    if (!index) index = 0;",
              "    else index = parseInt(index);",
              "    pm.collectionVariables.set(`productId${index}`, response._id);",
              "    console.log(`Saved productId${index}:`, response._id);",
              "    pm.collectionVariables.set('productIndex', index + 1);",
              "} else {",
              "    console.log('No _id found in response');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Product Status",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://{{host}}:{{port}}/products/{{productId0}}",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["products", "{{productId0}}"]
        }
      }
    },
    {
      "name": "Reserve Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId0}}\", \"quantity\": 1 },\n    { \"productId\": \"{{productId1}}\", \"quantity\": 2 }\n  ]\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/cart/reserve",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["cart", "reserve"]
        }
      }
    },
    {
      "name": "Cancel Reservation",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productIds\": [\"{{productId0}}\",\"{{productId1}}\"]\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/cart/cancel",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["cart", "cancel"]
        }
      }
    },
    {
      "name": "Checkout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productIds\": [\"{{productId0}}\",\"{{productId1}}\"]\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/cart/checkout",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["cart", "checkout"]
        }
      }
    }
  ],
  "variable": [
    { "key": "host", "value": "localhost" },
    { "key": "port", "value": "5000" },
    { "key": "userId", "value": "64f000000000000000000001" },
    { "key": "productName", "value": "Flash Product" },
    { "key": "totalStock", "value": "200" },
    { "key": "quantity", "value": "2" },
    { "key": "productIndex", "value": "0" }
  ]
}
