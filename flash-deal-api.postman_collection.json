{
  "info": {
    "name": "Flash Deal API",
    "_postman_id": "flash-deal-collection",
    "description": "Flash Deal Reservation & Checkout API with environment variables",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{productName}}\",\n  \"totalStock\": {{totalStock}}\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/products",
          "protocol": "http",
          "host": ["{{host}}:{{port}}"],
          "path": ["products"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save productId from response into environment variable",
              "let response = pm.response.json();",
              "if (response._id) {",
              "    pm.collectionVariables.set(\"productId\", response._id);",
              "    console.log(\"Saved productId:\", response._id);",
              "} else {",
              "    console.log(\"No _id found in response\");",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Product Status",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://{{host}}:{{port}}/products/{{productId}}",
          "protocol": "http",
          "host": ["{{host}}:{{port}}"],
          "path": ["products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Reserve Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"quantity\": {{quantity}}\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/cart/reserve",
          "protocol": "http",
          "host": ["{{host}}:{{port}}"],
          "path": ["cart", "reserve"]
        }
      }
    },
    {
      "name": "Cancel Reservation",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\"\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/cart/cancel",
          "protocol": "http",
          "host": ["{{host}}:{{port}}"],
          "path": ["cart", "cancel"]
        }
      }
    },
    {
      "name": "Checkout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\"\n}"
        },
        "url": {
          "raw": "http://{{host}}:{{port}}/cart/checkout",
          "protocol": "http",
          "host": ["{{host}}:{{port}}"],
          "path": ["cart", "checkout"]
        }
      }
    }
  ],
  "variable": [
    { "key": "host", "value": "localhost" },
    { "key": "port", "value": "5000" },
    { "key": "userId", "value": "64f000000000000000000001" },
    { "key": "productName", "value": "Flash Product" },
    { "key": "totalStock", "value": "200" },
    { "key": "quantity", "value": "2" },
    { "key": "productId", "value": "" }
  ]
}
